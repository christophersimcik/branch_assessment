<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO documented visibility issues research more -->
    <ConstraintSet android:id="@+id/list_hide_message">
        <Constraint
            android:id="@id/todo_list_no_data_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_a_todo"
            android:textColor="@color/white"
            android:textSize="@dimen/no_data_msg_txt_sz"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/off_mid_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/list_show_message">
        <Constraint
            android:id="@id/todo_list_no_data_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_a_todo"
            android:textColor="@color/white"
            android:textSize="@dimen/no_data_msg_txt_sz"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/off_mid_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/list_show_button">
        <Constraint android:id="@id/todo_list_add_button">
            <Transform android:translationY="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/list_hide_button">
        <Constraint android:id="@id/todo_list_add_button">
            <Transform android:translationY="100dp" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/list_show_button"
        app:constraintSetStart="@id/list_hide_button"
        app:duration="250"
        app:motionInterpolator="easeInOut" />

    <Transition
        app:constraintSetEnd="@id/list_hide_message"
        app:constraintSetStart="@id/list_show_message"
        app:duration="750"
        app:motionInterpolator="easeInOut" />
</MotionScene>
